{
  "name": "react_07172017",
  "version": "1.0.0",
  "description": "Starter project for React/Redux/GraphQL/Relay",
  "main": "index.js",
  "scripts": {
    "start": "npm run clean && npm run server-init && concurrently \"npm run rest\" \"npm run server\" \"npm run client\"",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:debug": "node --inspect-brk ./node_modules/.bin/jest --runInBand --env jest-environment-node-debug",
    "clean": "rimraf coverage server-dist schema.graphql",
    "server-init": "babel server --out-dir server-dist && node ./server-dist/output-schema",
    "server": "concurrently \"babel server --out-dir server-dist --watch\" \"nodemon --watch server-dist ./server-dist/index\"",
    "client": "concurrently \"npm run relay\" \"webpack-dev-server\"",
    "rest": "json-server --watch --port 3010 db.json",
    "relay": "relay-compiler --watch --src ./client/js/ --schema ./schema.graphql"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/training4developers/react_07122017.git"
  },
  "author": "Eric W. Greene",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/training4developers/react_07122017/issues"
  },
  "homepage": "https://github.com/training4developers/react_07122017#readme",
  "devDependencies": {
    "babel-jest": "20.0.3",
    "concurrently": "3.0.0",
    "enzyme": "2.9.1",
    "esformatter": "0.10.0",
    "esformatter-jsx": "8.0.0",
    "eslint": "4.2.0",
    "eslint-config-defaults": "9.0.0",
    "eslint-plugin-react": "7.1.0",
    "jest": "20.0.4",
    "jest-environment-node-debug": "2.0.0",
    "json-server": "0.11.2",
    "nodemon": "1.11.0",
    "react-test-renderer": "15.6.1",
    "rimraf": "2.5.3",
    "sass-lint": "1.10.2",
    "webpack-dev-server": "2.4.2"
  },
  "dependencies": {
    "autoprefixer": "7.1.2",
    "babel-cli": "6.24.1",
    "babel-core": "6.25.0",
    "babel-eslint": "7.2.3",
    "babel-loader": "7.1.1",
    "babel-plugin-relay": "1.1.0",
    "babel-plugin-transform-class-properties": "6.24.1",
    "babel-plugin-transform-decorators-legacy": "1.3.4",
    "babel-plugin-transform-do-expressions": "6.22.0",
    "babel-polyfill": "6.23.0",
    "babel-preset-latest": "6.24.1",
    "babel-preset-react": "6.24.1",
    "bootstrap-loader": "2.1.0",
    "bootstrap-sass": "3.3.7",
    "color-namer": "1.3.0",
    "copy-webpack-plugin": "4.0.1",
    "css-loader": "0.28.4",
    "es6-promise": "4.1.1",
    "exports-loader": "0.6.4",
    "express": "4.15.3",
    "express-graphql": "0.6.6",
    "extract-text-webpack-plugin": "3.0.0",
    "file-loader": "0.11.2",
    "graphql": "0.10.4",
    "graphql-relay": "0.5.2",
    "html-loader": "0.4.5",
    "html-webpack-plugin": "2.29.0",
    "immutable": "3.8.1",
    "imports-loader": "0.7.1",
    "key-mirror": "1.0.1",
    "node-fetch": "1.7.1",
    "node-sass": "4.5.3",
    "null-loader": "0.1.1",
    "pluralize": "5.0.0",
    "postcss": "6.0.6",
    "postcss-loader": "2.0.6",
    "prop-types": "15.5.10",
    "react": "15.6.1",
    "react-bootstrap": "0.31.1",
    "react-dom": "15.6.1",
    "react-redux": "5.0.5",
    "react-relay": "1.1.0",
    "react-router": "4.1.1",
    "react-router-redux": "4.0.8",
    "redux": "3.7.2",
    "redux-saga": "0.15.4",
    "redux-thunk": "2.2.0",
    "relay-compiler": "1.1.0",
    "relay-runtime": "1.1.0",
    "reselect": "3.0.1",
    "resolve-url-loader": "2.1.0",
    "rxjs": "5.4.2",
    "sass-loader": "6.0.6",
    "style-loader": "0.18.2",
    "uglify-js": "3.0.25",
    "uglifyjs-webpack-plugin": "0.4.6",
    "url-loader": "0.5.9",
    "webpack": "3.3.0",
    "whatwg-fetch": "2.0.3"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "client/**/*.js",
      "server/**/*.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 90,
        "lines": 90,
        "statements": 90
      }
    }
  },
  "devServer": {
    "contentBase": "client-dist",
    "historyApiFallback": true,
    "port": 3000,
    "proxy": [
      {
        "context": [
          "/graphql"
        ],
        "target": "http://localhost:3020",
        "changeOrigin": true,
        "secure": false
      },
      {
        "context": [
          "/api"
        ],
        "target": "http://localhost:3010",
        "changeOrigin": true,
        "secure": false,
        "pathRewrite": {
          "^/api": ""
        }
      }
    ]
  }
}
